---
interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  isHome?: boolean;
}

const { title, subtitle, showCTA = true, isHome = false } = Astro.props;
---

<section class={`relative bg-gradient-to-br from-primary via-primary to-primary-light text-white overflow-hidden ${isHome ? 'py-20 md:py-32' : 'py-16 md:py-20'}`}>
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img src="/images/carpet-cleaning-1.webp" alt="" class="w-full h-full object-cover opacity-20" />
  </div>
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/95 via-primary/90 to-primary-light/85"></div>

  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-72 h-72 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3"></div>
  <div class="absolute top-1/2 right-10 w-20 h-20 bg-accent/20 rounded-full hidden lg:block"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={isHome ? "grid md:grid-cols-2 gap-12 items-center" : "text-center"}>
      <div class={isHome ? "" : "max-w-4xl mx-auto"}>
        {isHome && (
          <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-6">
            <span class="w-2 h-2 bg-accent rounded-full animate-pulse"></span>
            <span class="text-sm font-medium">Serving Dronfield, Chesterfield & North East Derbyshire</span>
          </div>
        )}
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          {isHome ? (
            <>
              <span class="block">Professional</span>
              <span class="block text-accent">Carpet Cleaning</span>
              <span class="block">Services</span>
            </>
          ) : title}
        </h1>
        {subtitle && (
          <p class={`text-lg md:text-xl text-white/90 max-w-2xl mb-8 ${isHome ? '' : 'mx-auto'}`}>
            {subtitle}
          </p>
        )}
        {showCTA && (
          <div class={`flex flex-col sm:flex-row gap-4 ${isHome ? 'justify-start' : 'justify-center'}`}>
            <a
              href="tel:07481597929"
              class="bg-white text-primary px-8 py-4 rounded-xl font-semibold hover:bg-gray-100 hover:scale-105 transition-all duration-300 shadow-lg inline-flex items-center justify-center group"
            >
              <svg class="w-5 h-5 mr-2 group-hover:animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call 07481 597929
            </a>
            <a
              href="https://wa.me/447481597929"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-accent text-white px-8 py-4 rounded-xl font-semibold hover:bg-accent/90 hover:scale-105 transition-all duration-300 shadow-lg inline-flex items-center justify-center"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
          </div>
        )}

        {isHome && (
          <div class="flex flex-wrap gap-6 mt-10 pt-8 border-t border-white/20">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm">DBS Checked</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm">Fully Insured</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm">Free Quotes</span>
            </div>
          </div>
        )}
      </div>

      {isHome && (
        <div class="hidden md:block relative">
          <div class="relative">
            <img src="/images/extraction.webp" alt="Professional carpet cleaning" class="rounded-2xl shadow-2xl w-full" />
            <div class="absolute -bottom-6 -left-6 bg-white text-gray-900 p-4 rounded-xl shadow-xl">
              <div class="flex items-center gap-3">
                <div class="flex -space-x-1">
                  {[1,2,3,4,5].map(() => (
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <div>
                  <p class="font-bold text-sm">5-Star Rated</p>
                  <p class="text-xs text-gray-500">Trusted by locals</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
